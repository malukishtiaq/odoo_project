<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_kalitos" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='restaurant_section']" position="inside">
                <setting id="discount_refund_pin" string="PIN for Refund &amp; Discount">
                    <div class="content-group">
                        <div class="mt16">
                            <field name="discount_refund_pin"/><!-- readonly="pos_has_active_session"/-->
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
