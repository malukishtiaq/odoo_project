<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="gl_alzain_pos_receipt_logo.ReceiptHeader" t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//img[hasclass('pos-receipt-logo')]" position="replace">
            <img t-if="props.data.config.is_header_or_footer"
                 t-attf-src="/web/image?model=pos.config&amp;id={{props.data.config.id}}&amp;field=receipt_logo"
                 alt="Logo" class="pos-receipt-logo"/>
            <img t-else="" t-attf-src="/web/image?model=res.company&amp;id={{props.data.company.id}}&amp;field=logo"
                 alt="Logo" class="pos-receipt-logo"/>
        </xpath>
    </t>
</templates>
