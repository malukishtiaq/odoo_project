<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_receipt_logo" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']/setting/div" position="inside">
                <div>
                    <label string="Logo" for="receipt_logo" class="col-lg-2 o_light_label"/>
                    <field name="receipt_logo" widget="image"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
