<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_payment_form_internal_transfer" model="ir.ui.view">
    <field name="name">account.payment.form.internal.transfer</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
        <xpath expr="//group[@name='group2']" position="after">
            <group>
                <field name="is_internal_transfer" invisible="payment_type != 'outbound'"/>
                <field name="destination_journal_id" invisible="not is_internal_transfer"
                required="is_internal_transfer"/>
            </group>
        </xpath>
    </field>
</record>
</odoo>
