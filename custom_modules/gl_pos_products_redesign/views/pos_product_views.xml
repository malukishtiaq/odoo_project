<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the Product Template Kanban View -->
    <record id="pos_product_template_kanban_view_inherit" model="ir.ui.view">
        <field name="name">pos.product.template.kanban.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <!-- Add custom CSS class to the kanban element -->
            <xpath expr="//kanban" position="attributes">
                <attribute name="class">gl-modern-product-grid</attribute>
            </xpath>
            <!-- Add custom CSS class to the card template -->
            <xpath expr="//t[@t-name='card']" position="attributes">
                <attribute name="class">flex-row gl-modern-product-card</attribute>
            </xpath>
        </field>
    </record>
</odoo>
